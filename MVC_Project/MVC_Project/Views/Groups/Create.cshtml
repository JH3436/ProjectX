@model MVC_Project.Models.Group

@{
    ViewData["Title"] = "Create";
}

<h1>自主揪團表單</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label">請輸入活動名稱</label>
                <input asp-for="GroupName" class="form-control" placeholder="例: 眠月線三日遊" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupCategory" class="control-label">請選擇活動類別</label>
                <select asp-for="GroupCategory" class="form-control" >
                    <option value="" disabled selected>點擊後選擇</option>
                    <option value="Option1">登山</option>
                    <option value="Option2">潛水</option>
                    <option value="Option3">露營</option>
                    <option value="Option4">溯溪</option>
                    <option value="Option5">其他</option>
                </select>
                <span asp-validation-for="GroupCategory" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="GroupContent" class="control-label">請輸入活動內容</label>
                <input asp-for="GroupContent" class="form-control" placeholder="例: 先抵達阿里山森林遊樂區，再..." />
                <span asp-validation-for="GroupContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinAttendee" class="control-label">請輸入人數下限</label>
                <input asp-for="MinAttendee" class="form-control" placeholder="建議下限人數3人" />
                <span asp-validation-for="MinAttendee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAttendee" class="control-label">請輸入人數上限</label>
                <input asp-for="MaxAttendee" class="form-control" placeholder="建議上限人數10人" />
                <span asp-validation-for="MaxAttendee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">請選擇起始日</label>
                <input type="date" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">請選擇結束日</label>
                <input type="date" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Organizer" class="control-label"></label>
                <select asp-for="Organizer" class ="form-control" asp-items="ViewBag.Organizer"></select>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="OriginalActivityId" class="control-label"></label>
                <select asp-for="OriginalActivityId" class ="form-control" asp-items="ViewBag.OriginalActivityId"></select>
            </div>
            <br />
            <div>
                <input type="file" name="photos" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="提交" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

