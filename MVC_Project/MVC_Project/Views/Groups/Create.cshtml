@model MVC_Project.Models.Group

@{
    ViewData["Title"] = "Create";
}

<!-- css連結 -->
<link rel="stylesheet" href="~/css/Group.css" />

<h1>自主揪團表單</h1>

<div class="row row-aligned justify-content-center move-left-row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row row-aligned">
                <div class="col-md-8 wide-column col-aligned">
                    <!-- Left Column -->
                    <div class="form-group">
                        <label asp-for="GroupCategory" class="control-label" style="font-size: 30px;">請選擇活動類別</label>
                        <select asp-for="GroupCategory" class="form-control">
                            <option value="" disabled selected>點擊後選擇</option>
                            <option value="Option1">登山</option>
                            <option value="Option2">潛水</option>
                            <option value="Option3">露營</option>
                            <option value="Option4">溯溪</option>
                            <option value="Option5">其他</option>
                        </select>
                        <span asp-validation-for="GroupCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MinAttendee" class="control-label" style="font-size: 30px;">請輸入人數下限</label>
                        <input asp-for="MinAttendee" class="form-control" placeholder="建議下限人數3人" />
                        <span asp-validation-for="MinAttendee" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxAttendee" class="control-label" style="font-size: 30px;">請輸入人數上限</label>
                        <input asp-for="MaxAttendee" class="form-control" placeholder="建議上限人數10人" />
                        <span asp-validation-for="MaxAttendee" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label" style="font-size: 30px;">請選擇起始日</label>
                        <input type="date" asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label" style="font-size: 30px;">請選擇結束日</label>
                        <input type="date" asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 narrow-column">
                    <!-- Right Column -->
                    <div class="form-group">
                        <div class="photos">
                            <input type="file" name="photos" class="file-input" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupName" class="control-label" style="font-size: 30px;">請輸入活動名稱</label>
                        <input asp-for="GroupName" class="form-control group-name-input" placeholder="例: 眠月線三日遊" />
                        <span asp-validation-for="GroupName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupContent" class="control-label" style="font-size: 30px;">請輸入活動內容</label>
                        <textarea asp-for="GroupContent" class="form-control group-content-input" placeholder="例: 先抵達阿里山森林遊樂區，再..."></textarea>
                        <span asp-validation-for="GroupContent" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center BtnMove">
                    <div class="form-group">
                        <input type="submit" value="提交" class="btn submit" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- JS連結 -->
<script src="~/js/Group.js"></script>
