<script>

    function checkEditable(canEdit) {
        if (canEdit) {
            alert('可以編輯!');
            // 這裡可以加入你要連結到的編輯頁面的程式碼，例如：
            // location.href = 'your_edit_link_here';

        } else {
            alert('目前不可以編輯!');
        }
    }



    $('.delete-btn').click(function () {
        var id = $(this).data('id');
        var result = confirm("確定要刪除此紀錄嗎？");
        if (result) {
            $.post("/Member/DeleteLikeRecord", { likeRecordID: id }, function () {
                // 呼叫成功後的操作，例如重新載入頁面
                location.reload();
            });
        }
    });

</script>
