@{
}
@model Try_Photo_Upload.Models.Photos

@{
    ViewData["Title"] = "查看照片";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>照片詳細信息</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            照片:
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" width="300" alt="照片" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">返回列表</a>
</div>
